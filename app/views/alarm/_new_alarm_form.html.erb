<table>
	<% if subscriber_signed_in? %>
		<tr>
			<td>
				<%= hidden_field_tag "alarm[][subscriber_id]", current_subscriber.id %>
			</td>
	
		</tr>
	<% end %>
	<tr>
		<td>
			<%= label_tag("alarm[][hour]", "Hour: ") %>
		</td>
		<td>
			<%= text_field_tag("alarm[][hour]") %>
		</td>
	</tr>
	<tr>
		<td>
			<%= label_tag("alarm[][minute]", "Minute ") %>
		</td>
		<td>
			<%= text_field_tag("alarm[][minute]") %>
		</td>
	</tr>
</table>
